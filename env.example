# Пример файла конфигурации
# Скопируйте в .env и измените значения

# API настройки
API_V1_STR=/api/v1
PROJECT_NAME=AI Backend Playground
VERSION=1.1.0
DESCRIPTION=FastAPI backend с ML алгоритмами

# База данных
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_playground

# JWT настройки (ОБЯЗАТЕЛЬНО измените в продакшене!)
SECRET_KEY=your-super-secret-key-change-in-production-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS настройки
ALLOWED_HOSTS=["*"]

# Окружение
ENVIRONMENT=development
DEBUG=true

# Тестовая база данных
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_playground_test
